<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="@color/color_1f202a" android:layout_width="match_parent" android:layout_height="match_parent">
    <com.zhy.autolayout.AutoLinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
        <com.mobile.brasiltv.view.TitleView android:id="@+id/titleView" android:layout_width="match_parent" android:layout_height="wrap_content" app:titleViewTitle="@string/forget_pwd_title"/>
        <com.zhy.autolayout.AutoLinearLayout android:layout_gravity="center_horizontal" android:orientation="horizontal" android:layout_width="704px" android:layout_height="wrap_content" android:layout_marginTop="34px">
            <TextView android:textSize="30px" android:textStyle="bold" android:textColor="@color/color_important" android:id="@+id/mailTab" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/mailbox_retrieval"/>
            <TextView android:textSize="30px" android:textStyle="bold" android:textColor="@color/color_cccccc" android:id="@+id/mobileTab" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="70px" android:text="@string/phone_number_retrieval"/>
        </com.zhy.autolayout.AutoLinearLayout>
        <com.zhy.autolayout.AutoLinearLayout android:layout_gravity="center_horizontal" android:orientation="vertical" android:id="@+id/mailBindPage" android:visibility="gone" android:layout_width="702px" android:layout_height="wrap_content" android:layout_marginLeft="24px" android:layout_marginRight="24px">
            <EditText android:textSize="30px" android:textColor="@color/white" android:textColorHint="@color/color_99999" android:id="@+id/mEditEmail" android:background="@drawable/bg_edit_radius_input" android:paddingLeft="24px" android:layout_width="match_parent" android:layout_height="90px" android:layout_marginTop="48px" android:hint="@string/enter_your_email_notice" android:singleLine="true"/>
            <com.zhy.autolayout.AutoRelativeLayout android:layout_width="702px" android:layout_height="91px" android:layout_marginTop="30px">
                <EditText android:textSize="30px" android:textColor="@color/white" android:textColorHint="@color/color_99999" android:gravity="left|center_vertical|center_horizontal|center" android:id="@+id/mEtEmailverification" android:background="@drawable/bg_edit_radius_input" android:paddingLeft="11px" android:layout_width="360px" android:layout_height="match_parent" android:hint="@string/sms_code_notice" android:singleLine="true"/>
                <CheckBox android:textColor="@color/color_important" android:gravity="center" android:id="@+id/sendEmailMsgBt" android:background="@drawable/bg_send_sms_checkbox" android:layout_width="240px" android:layout_height="match_parent" android:button="@null" android:text="@string/sending" android:layout_alignParentRight="true"/>
            </com.zhy.autolayout.AutoRelativeLayout>
        </com.zhy.autolayout.AutoLinearLayout>
        <com.zhy.autolayout.AutoLinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:id="@+id/mobileBindPage" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="24px" android:layout_marginTop="49px" android:layout_marginRight="24px">
            <com.zhy.autolayout.AutoRelativeLayout android:id="@+id/chooseCountry" android:background="@drawable/bg_edit_radius_input" android:layout_width="702px" android:layout_height="90px">
                <TextView android:textSize="30px" android:textColor="@color/white" android:id="@+id/countryName" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Brazil" android:layout_centerInParent="true"/>
                <ImageView android:layout_width="14px" android:layout_height="25px" android:layout_marginRight="22px" android:src="@mipmap/ic_more_white" android:scaleType="center" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
            </com.zhy.autolayout.AutoRelativeLayout>
            <com.zhy.autolayout.AutoRelativeLayout android:id="@+id/selectNationRelative" android:background="@drawable/bg_edit_radius_input" android:layout_width="702px" android:layout_height="91px" android:layout_marginTop="30px">
                <TextView android:textSize="30px" android:textColor="@color/white" android:id="@+id/areNum" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="9px" android:text="+55" android:layout_centerVertical="true"/>
                <EditText android:textSize="30px" android:textColor="@color/white" android:textColorHint="@color/color_99999" android:id="@+id/phoneNum" android:background="@color/transparent" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="33px" android:layout_marginRight="60px" android:hint="@string/enter_your_phone_notice" android:singleLine="true" android:maxLength="17" android:layout_toRightOf="@+id/areNum" android:layout_centerVertical="true"/>
            </com.zhy.autolayout.AutoRelativeLayout>
            <com.zhy.autolayout.AutoRelativeLayout android:layout_width="702px" android:layout_height="91px" android:layout_marginTop="30px">
                <EditText android:textSize="30px" android:textColor="@color/white" android:textColorHint="@color/color_99999" android:gravity="left|center_vertical|center_horizontal|center" android:id="@+id/verification" android:background="@drawable/bg_edit_radius_input" android:paddingLeft="11px" android:layout_width="360px" android:layout_height="match_parent" android:hint="@string/sms_code_notice" android:singleLine="true"/>
                <CheckBox android:textColor="@color/color_important" android:gravity="center" android:id="@+id/sendMsgBt" android:background="@drawable/bg_send_sms_checkbox" android:layout_width="240px" android:layout_height="match_parent" android:button="@null" android:text="@string/sending" android:layout_alignParentRight="true"/>
            </com.zhy.autolayout.AutoRelativeLayout>
        </com.zhy.autolayout.AutoLinearLayout>
        <com.zhy.autolayout.AutoLinearLayout android:gravity="center_vertical" android:layout_gravity="center_horizontal" android:orientation="horizontal" android:visibility="gone" android:layout_width="704px" android:layout_height="wrap_content" android:layout_marginTop="162px">
            <CheckBox android:textSize="24px" android:textColor="@color/color_99999" android:id="@+id/readCheckBox" android:layout_width="wrap_content" android:layout_height="24px" android:layout_marginRight="15px" android:button="@null" android:text="" android:drawableLeft="@drawable/bg_checkbox_bind" android:drawablePadding="15px"/>
            <TextView android:textSize="24px" android:textColor="@color/color_cccccc" android:id="@+id/chooseCheckBox" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/read_and_agree"/>
            <TextView android:textSize="24px" android:textColor="@color/color_important" android:id="@+id/webLink" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/read_and_agree_end"/>
        </com.zhy.autolayout.AutoLinearLayout>
        <TextView android:textSize="30px" android:textStyle="bold" android:textColor="@color/ffffff" android:gravity="center" android:layout_gravity="center_horizontal" android:id="@+id/mTextLogOther" android:background="@drawable/bg_reset_pwd_button" android:layout_width="704px" android:layout_height="80px" android:layout_marginLeft="24px" android:layout_marginTop="46px" android:layout_marginRight="24px" android:layout_marginBottom="100px" android:text="@string/confirm" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true"/>
        <TextView android:textColor="@color/color_f23232" android:layout_gravity="center_horizontal" android:id="@+id/errorTx" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Please agree"/>
    </com.zhy.autolayout.AutoLinearLayout>
    <ProgressBar android:id="@+id/mLoadingPbar" android:visibility="gone" android:layout_width="25dp" android:layout_height="25dp" android:layout_centerInParent="true" style="?android:attr/progressBarStyleSmall"/>
</com.zhy.autolayout.AutoRelativeLayout>
