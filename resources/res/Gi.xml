<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@color/color_1f2029" android:layout_width="match_parent" android:layout_height="match_parent">
    <com.mobile.brasiltv.view.TitleView android:layout_width="match_parent" android:layout_height="wrap_content" app:titleViewTitle="@string/mine_order"/>
    <include android:id="@+id/mLayoutNoLogin" layout="@layout/item_order_status"/>
    <com.zhy.autolayout.AutoLinearLayout android:orientation="horizontal" android:id="@+id/mLayoutTab" android:visibility="gone" android:layout_width="match_parent" android:layout_height="88px">
        <TextView android:textSize="16sp" android:textStyle="bold" android:textColor="@color/color_important" android:gravity="center" android:id="@+id/mTextOrder" android:layout_width="0px" android:layout_height="match_parent" android:text="@string/all_orders" android:layout_weight="1"/>
        <TextView android:textSize="16sp" android:textColor="@color/color_cccccc" android:gravity="center" android:id="@+id/mTextRedemption" android:layout_width="0px" android:layout_height="match_parent" android:text="@string/redemption_record" android:layout_weight="1"/>
    </com.zhy.autolayout.AutoLinearLayout>
    <com.zhy.autolayout.AutoFrameLayout android:id="@+id/mAflOrder" android:layout_width="match_parent" android:layout_height="0dp" android:layout_marginTop="8px" android:layout_weight="1">
        <androidx.recyclerview.widget.RecyclerView android:id="@+id/mRecyclerOrder" android:layout_width="match_parent" android:layout_height="match_parent"/>
        <TextView android:textSize="14sp" android:layout_gravity="bottom" android:id="@+id/mTvOrderHint" android:background="@drawable/bg_order_hint" android:paddingLeft="9px" android:paddingTop="16px" android:paddingRight="9px" android:paddingBottom="16px" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="40px" android:layout_marginRight="40px" android:layout_marginBottom="55px"/>
    </com.zhy.autolayout.AutoFrameLayout>
    <include android:id="@+id/mOrderStatus" android:visibility="gone" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1" layout="@layout/item_order_status"/>
    <com.zhy.autolayout.AutoFrameLayout android:id="@+id/mAflRefresh" android:background="@color/color_1f202a" android:layout_width="match_parent" android:layout_height="120px">
        <View android:background="@color/color_17171F" android:layout_width="match_parent" android:layout_height="2px"/>
        <TextView android:enabled="true" android:textSize="15sp" android:textColor="@color/color_important" android:gravity="center" android:layout_gravity="center" android:id="@+id/mTvRefresh" android:background="@drawable/bg_order_refresh" android:layout_width="wrap_content" android:layout_height="60px" android:minWidth="300px" android:text="@string/order_refresh"/>
        <TextView android:textSize="15sp" android:textColor="@color/color_ffffff" android:layout_gravity="right|center_vertical|center_horizontal|center" android:id="@+id/mTvHelp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="58px" android:text="@string/order_help"/>
    </com.zhy.autolayout.AutoFrameLayout>
</com.zhy.autolayout.AutoLinearLayout>
