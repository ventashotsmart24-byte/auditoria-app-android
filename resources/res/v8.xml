<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="96dp">
    <ImageView android:id="@+id/upush_notification_shade_iv" android:layout_width="match_parent" android:layout_height="match_parent" android:scaleType="centerCrop"/>
    <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/upush_notification_top_layout" android:paddingTop="12dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentTop="true" android:paddingStart="16dp" android:paddingEnd="12dp" android:layout_alignParentStart="true">
        <ImageView android:id="@+id/upush_notification_small_icon" android:layout_width="16dp" android:layout_height="16dp" android:scaleType="fitXY"/>
        <TextView android:textSize="12sp" android:textColor="@color/upush_notification_title_color" android:id="@+id/upush_notification_app_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxWidth="160dp" android:maxLines="1" android:maxLength="20" android:layout_marginStart="8dp"/>
        <TextView android:textSize="12sp" android:textColor="@color/upush_notification_title_color" android:ellipsize="middle" android:id="@+id/upush_notification_date" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true" android:layout_marginStart="8dp"/>
    </LinearLayout>
    <ImageView android:id="@+id/upush_notification_large_iv" android:layout_width="48dp" android:layout_height="48dp" android:scaleType="fitXY" android:layout_below="@+id/upush_notification_top_layout" android:layout_centerVertical="true" android:layout_marginStart="4dp" android:layout_marginEnd="16dp" android:layout_alignParentEnd="true"/>
    <LinearLayout android:gravity="center_vertical" android:orientation="vertical" android:id="@+id/upush_notification_content_layout" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/upush_notification_top_layout" android:layout_alignParentBottom="true" android:layout_marginStart="16dp" android:layout_marginEnd="4dp" android:layout_toStartOf="@+id/upush_notification_large_iv">
        <TextView android:textAppearance="@style/TextAppearance.Material.Notification.Title" android:textSize="14sp" android:textColor="@color/upush_notification_title_color" android:ellipsize="end" android:id="@+id/upush_notification_title" android:layout_width="match_parent" android:layout_height="wrap_content" android:singleLine="true"/>
        <TextView android:textAppearance="@style/TextAppearance.Material.Notification.Info" android:textSize="14sp" android:textColor="@color/upush_notification_content_color" android:ellipsize="end" android:id="@+id/upush_notification_content" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:singleLine="true"/>
    </LinearLayout>
</RelativeLayout>
