<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="horizontal" android:id="@+id/mLayout" android:layout_width="match_parent" android:layout_height="45dp">
    <com.zhy.autolayout.AutoLinearLayout android:orientation="horizontal" android:id="@+id/mLayoutItem" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1">
        <ImageView android:id="@+id/mIvChannelLogo" android:layout_width="90px" android:layout_height="match_parent" android:layout_marginLeft="15px" android:layout_marginTop="15px" android:layout_marginRight="15px" android:layout_marginBottom="15px" android:src="@drawable/icon_channel_default_logo"/>
        <TextView android:textSize="30px" android:textColor="@color/ffffff" android:ellipsize="marquee" android:gravity="left|center_vertical|center_horizontal|center" android:id="@+id/mTextChannel" android:paddingLeft="2px" android:focusable="true" android:focusableInTouchMode="true" android:clickable="true" android:layout_width="match_parent" android:layout_height="match_parent" android:text="001  TNT HD" android:singleLine="true" android:marqueeRepeatLimit="marquee_forever"/>
    </com.zhy.autolayout.AutoLinearLayout>
    <com.zhy.autolayout.AutoFrameLayout android:id="@+id/mFavWrapper" android:background="@drawable/ripper_common" android:layout_width="80px" android:layout_height="match_parent" android:layout_toLeftOf="@+id/mLayoutButton">
        <ImageView android:layout_gravity="center" android:id="@+id/mIvFav" android:layout_width="40px" android:layout_height="40px" android:src="@drawable/icon_live_fav" android:scaleType="fitXY"/>
        <ProgressBar android:layout_gravity="center" android:id="@+id/mPbUnfav" android:visibility="gone" android:layout_width="40px" android:layout_height="40px" style="?android:attr/progressBarStyleSmall"/>
    </com.zhy.autolayout.AutoFrameLayout>
</com.zhy.autolayout.AutoLinearLayout>
