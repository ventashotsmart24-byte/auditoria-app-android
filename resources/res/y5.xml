<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <com.zhy.autolayout.AutoLinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
        <com.zhy.autolayout.AutoRelativeLayout android:id="@+id/mRlHistoryList" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="23px" android:layout_marginTop="50px">
            <TextView android:textSize="36px" android:textStyle="bold" android:textColor="@color/color_fffefe" android:id="@+id/mTvHistoryName" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/mine_history"/>
            <ImageView android:id="@+id/mIvMore" android:layout_width="28px" android:layout_height="28px" android:layout_marginRight="32px" android:src="@drawable/icon_person_arrow" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
        </com.zhy.autolayout.AutoRelativeLayout>
        <androidx.recyclerview.widget.RecyclerView android:id="@+id/mRvContent" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginLeft="24px" android:layout_marginTop="21px"/>
        <TextView android:textSize="36px" android:textColor="@color/color_ffffff" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="32px" android:layout_marginTop="57px" android:text="@string/mine_other_functions"/>
        <com.zhy.autolayout.AutoLinearLayout android:orientation="vertical" android:paddingLeft="32px" android:paddingRight="28px" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="34px">
            <com.zhy.autolayout.AutoLinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/mLlAccount" android:layout_width="match_parent" android:layout_height="36px">
                <ImageView android:id="@+id/mIvAccountManager" android:layout_width="36px" android:layout_height="36px" android:src="@drawable/icon_mine_account_manager" android:scaleType="fitCenter"/>
                <TextView android:textSize="28px" android:textColor="@color/ffffff" android:gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20px" android:text="@string/mine_account_new" android:layout_weight="1"/>
                <ImageView android:id="@+id/mIvAccountMore" android:layout_width="28px" android:layout_height="28px" android:src="@drawable/icon_person_arrow"/>
            </com.zhy.autolayout.AutoLinearLayout>
            <com.zhy.autolayout.AutoLinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/mLlBlock" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="56px">
                <ImageView android:id="@+id/mIvBlock" android:layout_width="36px" android:layout_height="36px" android:src="@drawable/icon_mine_adult" android:scaleType="fitCenter"/>
                <TextView android:textSize="28px" android:textColor="@color/ffffff" android:gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20px" android:text="@string/mine_block" android:layout_weight="1"/>
                <ImageView android:id="@+id/mIvAdultContent" android:layout_width="52px" android:layout_height="52px" android:src="@drawable/selector_adult_content_switch_block" android:scaleType="fitCenter"/>
            </com.zhy.autolayout.AutoLinearLayout>
            <com.zhy.autolayout.AutoLinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/mLlHelp" android:layout_width="match_parent" android:layout_height="36px" android:layout_marginTop="56px">
                <ImageView android:id="@+id/mIvMineHelp" android:layout_width="36px" android:layout_height="36px" android:src="@drawable/icon_mine_help" android:scaleType="fitCenter"/>
                <TextView android:textSize="28px" android:textColor="@color/ffffff" android:gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20px" android:text="@string/mine_help" android:layout_weight="1"/>
                <ImageView android:id="@+id/mIvHelpMore" android:layout_width="28px" android:layout_height="28px" android:src="@drawable/icon_person_arrow"/>
            </com.zhy.autolayout.AutoLinearLayout>
            <com.zhy.autolayout.AutoLinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/mLlSubtitle" android:layout_width="match_parent" android:layout_height="36px" android:layout_marginTop="56px">
                <ImageView android:id="@+id/mIvMineSubtitle" android:layout_width="36px" android:layout_height="36px" android:src="@drawable/icon_mine_subtitle" android:scaleType="fitCenter"/>
                <TextView android:textSize="28px" android:textColor="@color/ffffff" android:gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20px" android:text="@string/mine_subtitle_audio" android:layout_weight="1"/>
                <ImageView android:id="@+id/mIvSubtitleMore" android:layout_width="28px" android:layout_height="28px" android:src="@drawable/icon_person_arrow"/>
            </com.zhy.autolayout.AutoLinearLayout>
            <com.zhy.autolayout.AutoLinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/mRlSetting" android:layout_width="match_parent" android:layout_height="36px" android:layout_marginTop="56px" android:layout_marginBottom="64px">
                <ImageView android:id="@+id/mIvSetting" android:layout_width="36px" android:layout_height="36px" android:src="@drawable/icon_mine_setting" android:scaleType="fitCenter"/>
                <TextView android:textSize="28px" android:textColor="@color/ffffff" android:gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20px" android:text="@string/mine_setting" android:layout_weight="1"/>
                <View android:id="@+id/viewUpgradeDot" android:background="@drawable/bg_upgrade_tips" android:visibility="gone" android:layout_width="16px" android:layout_height="16px" android:layout_marginRight="8px"/>
                <ImageView android:id="@+id/mIvSettingMore" android:layout_width="28px" android:layout_height="28px" android:src="@drawable/icon_person_arrow"/>
            </com.zhy.autolayout.AutoLinearLayout>
        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoLinearLayout>
