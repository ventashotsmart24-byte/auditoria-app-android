<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <com.zhy.autolayout.AutoLinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
        <ImageView android:id="@+id/mIvChannelLogo" android:padding="15px" android:layout_width="120px" android:layout_height="match_parent" android:src="@drawable/icon_channel_default_logo" android:scaleType="centerInside"/>
        <TextView android:textSize="30px" android:textColor="@color/ffffff" android:ellipsize="end" android:gravity="center_vertical" android:id="@+id/mTextName" android:paddingLeft="2px" android:paddingRight="26px" android:layout_width="0px" android:layout_height="80px" android:text="CCTV1" android:singleLine="true" android:layout_weight="1"/>
        <com.zhy.autolayout.AutoFrameLayout android:id="@+id/mFavWrapper" android:background="@drawable/ripper_common" android:layout_width="80px" android:layout_height="match_parent">
            <ImageView android:layout_gravity="center" android:id="@+id/mIvFav" android:layout_width="40px" android:layout_height="40px" android:src="@drawable/icon_live_fav" android:scaleType="fitXY"/>
            <ProgressBar android:layout_gravity="center" android:id="@+id/mPbUnfav" android:visibility="gone" android:layout_width="40px" android:layout_height="40px" android:indeterminateTint="@color/color_important" style="?android:attr/progressBarStyleSmall"/>
        </com.zhy.autolayout.AutoFrameLayout>
    </com.zhy.autolayout.AutoLinearLayout>
    <ImageView android:layout_width="match_parent" android:layout_height="1px" android:layout_marginLeft="26px" android:layout_marginRight="26px" android:src="@color/color_191a23"/>
</com.zhy.autolayout.AutoLinearLayout>
