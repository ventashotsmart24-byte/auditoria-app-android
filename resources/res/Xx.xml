<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@color/color_1f202a" android:layout_width="match_parent" android:layout_height="match_parent">
    <com.mobile.brasiltv.view.TitleView android:id="@+id/mTitleView" android:layout_width="match_parent" android:layout_height="wrap_content" app:titleViewTitle="@string/set_pwd"/>
    <com.zhy.autolayout.AutoLinearLayout android:orientation="vertical" android:id="@+id/resetPwd" android:layout_width="match_parent" android:layout_height="match_parent">
        <TextView android:textSize="24px" android:textColor="@color/color_ffaa00" android:id="@+id/tips" android:background="@drawable/bg_change_email_tips" android:paddingLeft="32px" android:paddingTop="10px" android:paddingRight="68px" android:paddingBottom="10px" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/password_format_tips" android:paddingVertical="10px"/>
        <TextView android:textSize="28px" android:textColor="@color/ffffff" android:id="@+id/tvNewPasswordTitle" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="32px" android:layout_marginTop="40px" android:text="@string/personal_password_new" android:layout_alignParentStart="true" android:layout_alignParentEnd="true"/>
        <EditText android:textSize="30px" android:textColor="@color/white" android:textColorHint="@color/color_99999" android:layout_gravity="center_horizontal" android:id="@+id/pwdFirst" android:background="@drawable/bg_edit_radius_input" android:paddingLeft="20px" android:focusable="true" android:layout_width="match_parent" android:layout_height="100px" android:layout_marginLeft="32px" android:layout_marginTop="20px" android:layout_marginRight="32px" android:hint="@string/please_set_your_password" android:singleLine="true" android:maxLength="12" android:digits="@string/filter_vcode" android:layout_marginHorizontal="32px"/>
        <TextView android:textSize="28px" android:textColor="@color/ffffff" android:id="@+id/tvReNewPasswordTitle" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="32px" android:layout_marginTop="40px" android:text="@string/personal_password_comfirm" android:layout_alignParentStart="true" android:layout_alignParentEnd="true"/>
        <EditText android:textSize="30px" android:textColor="@color/white" android:textColorHint="@color/color_99999" android:layout_gravity="center_horizontal" android:id="@+id/pwdSecond" android:background="@drawable/bg_edit_radius_input" android:paddingLeft="20px" android:focusable="true" android:layout_width="match_parent" android:layout_height="100px" android:layout_marginLeft="32px" android:layout_marginTop="20px" android:layout_marginRight="32px" android:hint="@string/please_enter_new_password" android:singleLine="true" android:maxLength="12" android:digits="@string/filter_vcode" android:layout_marginHorizontal="32px"/>
        <TextView android:enabled="false" android:textSize="32px" android:textStyle="bold" android:textColor="@color/ffffff" android:gravity="center" android:layout_gravity="center_horizontal" android:id="@+id/confirmBt" android:background="@drawable/selector_btn_login" android:layout_width="match_parent" android:layout_height="100px" android:layout_marginLeft="32px" android:layout_marginTop="100px" android:layout_marginRight="32px" android:layout_marginBottom="100px" android:text="@string/sure" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true"/>
        <TextView android:textSize="26px" android:textColor="@color/color_f23232" android:gravity="center" android:layout_gravity="center_horizontal" android:id="@+id/mTextErrorNotify" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="60px" android:text="Wrong password, please re-enter!" android:layout_below="@+id/mTextForgetPassword" android:layout_centerHorizontal="true"/>
    </com.zhy.autolayout.AutoLinearLayout>
    <com.zhy.autolayout.AutoRelativeLayout android:id="@+id/resetPwdSuccess" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent">
        <ImageView android:id="@+id/img" android:layout_width="103px" android:layout_height="129px" android:layout_marginTop="144px" android:src="@mipmap/ic_phone_reset" android:layout_centerHorizontal="true"/>
        <TextView android:textSize="26px" android:textColor="@color/white" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="41px" android:layout_marginTop="65px" android:layout_marginRight="41px" android:text="@string/pwd_reset_ok" android:layout_below="@+id/img" android:layout_centerHorizontal="true"/>
    </com.zhy.autolayout.AutoRelativeLayout>
</com.zhy.autolayout.AutoLinearLayout>
