<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="@color/color_191a23" android:layout_width="match_parent" android:layout_height="match_parent">
    <com.mobile.brasiltv.view.TitleView android:id="@+id/title_view" android:layout_width="match_parent" android:layout_height="wrap_content" app:titleViewTitle="@string/msg_notification"/>
    <com.zhy.autolayout.AutoLinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="15px" android:layout_below="@+id/title_view">
        <com.zhy.autolayout.AutoRelativeLayout android:id="@+id/mLayoutNotify" android:background="@color/color_2c2d39" android:paddingLeft="24px" android:layout_width="match_parent" android:layout_height="140px">
            <TextView android:textSize="36px" android:textColor="@color/color_ffffff" android:id="@+id/mTvMenuName" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="25px"/>
            <TextView android:textSize="20px" android:textColor="@color/color_b3b3b3" android:id="@+id/mTvSubMenuName" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="15px" android:layout_toRightOf="@+id/mIvMenuIcon" android:layout_below="@+id/mTvMenuName"/>
            <ImageView android:id="@+id/mIvMenuRightIcon" android:layout_width="14px" android:layout_height="25px" android:layout_marginTop="35px" android:layout_marginRight="30px" android:src="@drawable/icon_mine_arrow" android:scaleType="fitXY" android:layout_alignParentRight="true"/>
            <TextView android:textSize="24px" android:textColor="@color/color_b3b3b3" android:id="@+id/mTvMenuInfo" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="32px" android:layout_marginRight="28px" android:layout_alignParentRight="true"/>
        </com.zhy.autolayout.AutoRelativeLayout>
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoRelativeLayout>
