<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@color/color_1f202a" android:layout_width="match_parent" android:layout_height="match_parent">
    <com.zhy.autolayout.AutoLinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
        <com.mobile.brasiltv.view.TitleView android:id="@+id/title_view" android:background="@color/color_191a23" android:layout_width="match_parent" android:layout_height="wrap_content" app:titleViewTitle="@string/phone_binding"/>
        <com.zhy.autolayout.AutoLinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:id="@+id/mobileBindPage" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="24px" android:layout_marginTop="49px" android:layout_marginRight="24px">
            <com.zhy.autolayout.AutoRelativeLayout android:id="@+id/chooseCountry" android:background="@drawable/bg_edit_radius_input" android:layout_width="702px" android:layout_height="90px">
                <TextView android:textSize="30px" android:textColor="@color/white" android:id="@+id/countryName" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Brazil" android:layout_centerInParent="true"/>
                <ImageView android:layout_width="14px" android:layout_height="25px" android:layout_marginRight="22px" android:src="@mipmap/ic_more_white" android:scaleType="center" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
            </com.zhy.autolayout.AutoRelativeLayout>
            <com.zhy.autolayout.AutoRelativeLayout android:id="@+id/selectNationRelative" android:background="@drawable/bg_edit_radius_input" android:layout_width="702px" android:layout_height="91px" android:layout_marginTop="30px">
                <TextView android:textSize="30px" android:textColor="@color/white" android:id="@+id/areNum" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="9px" android:text="+55" android:layout_centerVertical="true"/>
                <EditText android:textSize="30px" android:textColor="@color/white" android:textColorHint="@color/color_99999" android:id="@+id/phoneNum" android:background="@color/transparent" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="33px" android:layout_marginRight="60px" android:hint="@string/enter_your_phone_notice" android:singleLine="true" android:layout_toRightOf="@+id/areNum" android:layout_centerVertical="true"/>
                <ImageView android:visibility="gone" android:layout_width="14px" android:layout_height="25px" android:layout_marginRight="22px" android:src="@mipmap/ic_more_white" android:scaleType="center" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
            </com.zhy.autolayout.AutoRelativeLayout>
            <com.zhy.autolayout.AutoRelativeLayout android:layout_width="702px" android:layout_height="91px" android:layout_marginTop="30px">
                <EditText android:textSize="30px" android:textColor="@color/white" android:textColorHint="@color/color_99999" android:gravity="left|center_vertical|center_horizontal|center" android:id="@+id/verificationEdit" android:background="@drawable/bg_edit_radius_input" android:paddingLeft="11px" android:layout_width="360px" android:layout_height="match_parent" android:hint="@string/sms_code_notice" android:singleLine="true" android:inputType="number"/>
                <CheckBox android:enabled="false" android:textColor="@color/color_important" android:gravity="center" android:id="@+id/sendMsgBt" android:background="@drawable/bg_send_sms_checkbox" android:layout_width="240px" android:layout_height="match_parent" android:button="@null" android:text="@string/sending" android:layout_alignParentRight="true"/>
            </com.zhy.autolayout.AutoRelativeLayout>
            <TextView android:textSize="30px" android:textStyle="bold" android:textColor="@color/ffffff" android:gravity="center" android:layout_gravity="center_horizontal" android:id="@+id/mTextLogOther" android:background="@drawable/bg_reset_pwd_button" android:layout_width="704px" android:layout_height="80px" android:layout_marginLeft="24px" android:layout_marginTop="46px" android:layout_marginRight="24px" android:layout_marginBottom="100px" android:text="@string/confirm" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true"/>
            <TextView android:textColor="@color/color_f23232" android:layout_gravity="center_horizontal" android:id="@+id/errorTx" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Please agree"/>
        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoLinearLayout>
    <ProgressBar android:id="@+id/mLoadingPbar" android:visibility="gone" android:layout_width="25dp" android:layout_height="25dp" android:layout_centerInParent="true" style="?android:attr/progressBarStyleSmall"/>
</com.zhy.autolayout.AutoRelativeLayout>
